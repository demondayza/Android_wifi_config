<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_bg"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/title_step" 
        android:textStyle="bold"
        android:text="@string/step1"
        />
    
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginTop="0dp"
        android:textColor="@color/black_60"
        android:textSize="@dimen/Title_4" 
        android:text="@string/ap_mode"
        />
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/title_step" 
        android:textStyle="bold"
        android:text="@string/step2"
        />
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginTop="0dp"
        android:textColor="@color/black_60"
        android:textSize="@dimen/Title_4" 
        android:text="@string/reminder_connect_hotspot1"
        />
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/title_step" 
        android:textStyle="bold"
        android:text="@string/step3"
        />
	
	<TextView
	    android:id="@+id/tv_label_step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginTop="0dp"
        android:textColor="@color/black_60"
        android:textSize="@dimen/Title_4" 
        android:text="@string/label_server_info"
        />
	
	<EditText 
	    android:id="@+id/et_address"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/Title_4"
        android:textColorHint="@color/black_50"
        android:background="@drawable/et_bg"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:singleLine="true"
	    />
	
	<EditText 
	    android:id="@+id/et_port"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/Title_4"
        android:textColorHint="@color/black_50"
        android:background="@drawable/et_bg"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:singleLine="true"
        android:inputType="number"
	    />
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/title_step" 
        android:textStyle="bold"
        android:text="@string/step4"
        />
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginTop="0dp"
        android:textColor="@color/black_60"
        android:textSize="@dimen/Title_4" 
        android:text="@string/select_wifi"
        />
	
	<EditText 
	    android:id="@+id/et_ssid"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/Title_4"
        android:textColorHint="@color/black_50"
        android:hint="@string/input_wifi_name"
        android:background="@drawable/et_bg"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:singleLine="true"
	    />
	
	<EditText 
	    android:id="@+id/et_pwd"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/Title_4"
        android:textColorHint="@color/black_50"
        android:hint="@string/input_wifi_psw"
        android:background="@drawable/et_bg"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:singleLine="true"
	    />
    
	<View
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    />
	
	<Button 
	    android:id="@+id/btn_config"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:textSize="@dimen/Title_1"
        android:background="@drawable/long_btn_bg"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="@string/pair_wifi"
	    />

</LinearLayout>






















